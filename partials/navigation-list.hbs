<ul class="{{ul_class}}">
  {{#foreach @site.navigation}}
    <li class="{{link_class for=(url) class=(concat "nav-" slug)}} {{../li_class}}{{#match label.[0] "-"}} is-subitem{{/match}}{{#match this.url "#"}} nav-toggle{{/match}}"
      data-label="{{label}}" data-slug="{{slug}}" data-length="{{label.length}}">
      <a class="{{../a_class}}" href="{{this.url}}"{{#match this.url.[0] "#"}} role="button"{{/match}}
        {{#match this.url "#"}}onclick="toggleDropdown(event);return false;" aria-haspopup="true" aria-expanded="false"{{/match}}>
        <span>{{label}}</span>
      </a>
    </li>
  {{/foreach}}
</ul>
